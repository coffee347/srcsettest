        .main-banner-wrapper
            picture
                source(media="(min-width: 577px)", srcset="images/Banner--desktop.png")
                source(media="(min-width: 0)", srcset="images/Banner--mobile.png ")
                img(src="images/Banner--mobile.png", alt="Hero section banner text with a car")
            section#main
                .section-content
                    .banner-logo-wrapper
                        img(src="images/banner-logo.png" alt="Banner logo").banner-logo
